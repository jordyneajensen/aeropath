<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header with navigation -->
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <div class="flex items-center">
        <%= link_to aircraft_index_path, class: "text-blue-600 hover:text-blue-900 mr-2" do %>
          ‚Üê Back to Aircraft
        <% end %>
      </div>
      <h1 class="mt-2 text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        <%= @aircraft.registration %>
      </h1>
    </div>
    <div class="mt-4 flex sm:mt-0 sm:ml-4">
      <%= link_to edit_aircraft_path(@aircraft), 
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        Edit Aircraft
      <% end %>
    </div>
  </div>

  <!-- Aircraft Details -->
  <div class="mt-8 max-w-3xl">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Aircraft Details</h3>
      </div>
      <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Registration</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @aircraft.registration %></dd>
          </div>

          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Make/Model</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @aircraft.make_model %></dd>
          </div>

          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Year of Manufacture</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @aircraft.year_of_manufacture %></dd>
          </div>

          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Engine Type</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @aircraft.engine_type %></dd>
          </div>

          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Number of Engines</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @aircraft.number_of_engines %></dd>
          </div>
        </dl>
      </div>

      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Performance Specifications</h3>
      </div>
      <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Maximum Speed</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @aircraft.max_speed %> knots</dd>
          </div>

          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Cruise Speed</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @aircraft.cruise_speed %> knots</dd>
          </div>

          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Fuel Capacity</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @aircraft.fuel_capacity %> gallons</dd>
          </div>

          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Empty Weight</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @aircraft.empty_weight %> lbs</dd>
          </div>

          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Maximum Takeoff Weight</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @aircraft.max_takeoff_weight %> lbs</dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
